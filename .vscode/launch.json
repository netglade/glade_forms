    "version": "0.2.0",
    "configurations": [
        {
            "name": "storybook",
            "cwd": "storybook",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "storybook-dev",
            "cwd": "storybook",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define",
                "DEBUG_MODEL=true"
            ]
        },
        {
            "name": "devtools_extension (DEBUG MODE)",
            "cwd": "glade_forms_devtools_extension",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=DEBUG_MODE=true",
                "--dart-define=use_simulated_environment=true"
            ]
        }
    ]
}